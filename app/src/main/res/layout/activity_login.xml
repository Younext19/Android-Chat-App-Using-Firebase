<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            />

        <EditText
            android:id="@+id/loginmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/login_img"
            android:hint=" Enter Your Email"

            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:background="@drawable/inputs"
            android:layout_margin="20dp"
            android:drawableStart="@drawable/mail"
            />
        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/loginmail"
            android:hint=" Enter Your Password"

            android:inputType="textPassword"
            android:padding="13dp"
            android:background="@drawable/inputs"
            android:layout_margin="20dp"
            android:drawableStart="@drawable/key"
            />

        <TextView
            android:id="@+id/forget_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_password"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="2dp"
            android:textAlignment="textEnd"
            android:padding="4dp"
            android:text="Forgot Your Password ?"
            android:textColor="#000"
            android:textSize="20sp" />
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/forget_pw"
            android:text="Log In"
            android:textAllCaps="false"
            android:background="@drawable/buttons"
            android:drawableStart="@drawable/send"
            android:padding="13dp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textSize="15sp"
            android:textColor="#000"


            />
        <TextView
            android:id="@+id/register_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/submit"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:padding="4dp"
            android:text="Create A New Account ?"
            android:textColor="#000"
            android:textSize="20sp" />
        <Button
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_acc"
            android:background="@drawable/buttons"
            android:padding="13dp"
            android:text="Login With Your Phone Number ?"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:drawableStart="@drawable/phone"
            />
    </RelativeLayout>
</RelativeLayout>